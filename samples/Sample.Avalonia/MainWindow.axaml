<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Sample.Avalonia.MainWindow"
        Title="SharpInspect - Avalonia Sample"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20" RowDefinitions="Auto,Auto,*,Auto">

        <!-- 헤더 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="SharpInspect Avalonia Sample"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="DevToolsUrlText"
                       Text="DevTools URL: http://localhost:9229"
                       FontSize="12"
                       Foreground="Gray"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- 버튼 그룹 -->
        <StackPanel Grid.Row="1" Spacing="10" Margin="0,0,0,20">
            <Button Content="HTTP 요청 보내기"
                    Click="OnMakeRequestsClick"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Padding="15,10"/>
            <Button Content="로그 메시지 작성"
                    Click="OnWriteLogsClick"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Padding="15,10"/>
            <Button Content="DevTools 열기"
                    Click="OnOpenDevToolsClick"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Center"
                    Padding="15,10"/>
        </StackPanel>

        <!-- 출력 영역 -->
        <Border Grid.Row="2"
                Background="#1E1E1E"
                CornerRadius="5"
                Padding="10">
            <ScrollViewer>
                <TextBlock x:Name="OutputText"
                           Text="준비 완료. 버튼을 클릭하여 테스트하세요."
                           FontFamily="Consolas, Courier New, monospace"
                           FontSize="12"
                           Foreground="#D4D4D4"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- 상태 표시줄 -->
        <TextBlock Grid.Row="3"
                   x:Name="StatusText"
                   Text="상태: 대기 중"
                   FontSize="11"
                   Foreground="Gray"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
